<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="#fefefe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bottom_bar_title"
            android:layout_width="241dp"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="music"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_width="167dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:padding="20dp">

            <ImageView
                android:id="@+id/bottom_bar_previous"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_skip_previous_24_grey" />

            <ImageView
                android:id="@+id/bottom_bar_next"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_skip_next_24_grey" />

            <ImageView
                android:id="@+id/bottom_bar_pause_play"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_pause_circle_outline_24_grey" />

        </RelativeLayout>

    </LinearLayout>




</FrameLayout>